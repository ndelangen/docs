[data-page=index]

  .toc
    display block

  .toc[hidden]
    display: none

  #logo
    position relative
    top 0
    left 0
    display block
    width 100%
    text-align center
    img
      display inline-block
      max-width 200px
      margin-top 20px

  nav
    display none

  h1
    color black
    text-align center
    font-size 48px
    font-weight 400
    padding 0
    margin 15px 0

  h2
    centeredColumn homepageWidth
    margin-top 30px
    margin-bottom 10px
    &:after
      color rgba(text-color, 0.4)

.search
  background: rgba(51,51,51,0.1)
  padding: 30px
  text-align: center

  .search-label
    display: inline-block
    font-size: 24px
    font-weight: 600
    margin-right: 10px

  .search-input
    display: inline-block
    font-size: 18px
    padding: 6px
    margin-left: 10px

.search-results
  display: block

.search-noresults
  display: block
  centeredColumn homepageWidth
  margin-top 30px
  margin-bottom 10px

.search-results[hidden]
  display: none
